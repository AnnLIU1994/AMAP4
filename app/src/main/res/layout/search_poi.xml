<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:weightSum="1">

    <TextView
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:id="@+id/makeRoad_header"
    android:layout_gravity="top"
    android:background="#ff00a0e9" />

    <Button
    android:layout_width="45dp"
    android:layout_height="30dp"
    android:id="@+id/makeRoad_GoBack"
    android:background="@drawable/iconfont_zuojiantou"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:text="搜索"
    android:id="@+id/search_header"
        android:layout_alignBottom="@+id/makeRoad_header"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:gravity="center_vertical"
    android:textSize="21sp" />


    <EditText
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:id="@+id/search_edit"
        android:hint="@string/input_the_destination"
        android:lines="1"
        android:enabled="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/makeRoad_header"
        android:textIsSelectable="false"
        android:paddingRight="35dp"
        android:layout_marginLeft="20dp"
        android:singleLine="true"
        android:paddingLeft="37dp"
        android:imeOptions="actionSearch"
        />

    <Button
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:id="@+id/search_video"
    android:background="@drawable/iconfont_yuyin"
    android:singleLine="true"
    android:gravity="center_vertical|center_horizontal"
    android:textAlignment="center"
    android:layout_alignRight="@+id/search_edit"
    android:layout_alignEnd="@+id/search_edit"
    android:layout_alignBottom="@+id/search_edit"
    android:layout_marginBottom="5dp"/>

    <Button
    android:id="@+id/search_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:text="search"
        android:layout_gravity="center_horizontal"
        android:layout_alignWithParentIfMissing="false"
        android:background="@drawable/iconfont_search"
        android:textColor="@android:color/white"
        android:singleLine="false"
    android:layout_alignBottom="@+id/search_video"
    android:layout_alignLeft="@+id/search_edit"
    android:layout_alignStart="@+id/search_edit" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="1dp"
    android:id="@+id/search_below"
    android:layout_below="@+id/search_button"
    android:layout_alignLeft="@+id/search_edit"
    android:layout_alignStart="@+id/search_edit"
    android:layout_marginTop="20dp"
    android:layout_alignRight="@+id/search_edit"
    android:layout_alignEnd="@+id/search_edit"
    android:background="#ffdddddd"
    android:textColor="@android:color/white"
    android:text="history"
    android:textSize="5sp"
    android:textAlignment="center"
    android:gravity="center_horizontal"
    android:paddingTop="1dp" />

    <ListView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/listView"
    android:layout_below="@+id/search_below"
    android:layout_alignLeft="@+id/search_below"
    android:layout_alignStart="@+id/search_below"
    android:layout_marginTop="20dp"
    android:layout_alignRight="@+id/search_below"
    android:layout_alignEnd="@+id/search_below"
        android:layout_alignParentBottom="true" />

    <!--<Button-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="30dp"-->
    <!--android:text="clear history"-->
    <!--android:id="@+id/history_clear"-->
    <!--android:layout_marginTop="40dp"-->
    <!--android:layout_below="@+id/listView"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:textColor="@android:color/white"-->
    <!--android:background="#ffafe0ff"-->
    <!--android:textSize="12sp" />-->
    <Button
        android:layout_width="45dp"
        android:layout_height="39dp"
        android:text="搜索"
        android:id="@+id/button3"
        android:layout_alignRight="@+id/search_edit"
        android:layout_alignEnd="@+id/search_edit"
        android:textSize="12sp"
        android:visibility="gone"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/selector03"
        android:layout_alignBottom="@+id/search_video"
        android:layout_alignParentBottom="false"
        android:layout_marginBottom="-2.1dp"
        android:layout_marginRight="3dp"
        android:layout_alignTop="@+id/search_edit" />

</RelativeLayout>