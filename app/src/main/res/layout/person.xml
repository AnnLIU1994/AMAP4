<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:id="@+id/tools"
    style="@android:style/Animation">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/makeRoad_header"
        android:layout_gravity="top"
        android:background="#ff00a0e9" />

    <Button
        android:id="@+id/makeRoad_GoBack"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/iconfont_zuojiantou" />
    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="个人中心"-->
        <!--android:id="@+id/textView2"-->
        <!--android:layout_alignBottom="@+id/makeRoad_header"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:textColor="@android:color/white"-->
        <!--android:textAlignment="center"-->
        <!--android:gravity="center_vertical"-->
        <!--android:textSize="21sp" />-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/makeRoad_header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#fff6f6f6">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:id="@+id/imageView2"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#ff00a0e9" />

            <com.example.amap.util.CircularImage
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:id="@+id/circle"
                android:layout_centerInParent="true"
                android:elevation="30dp"
                />

            <com.example.amap.util.CircularImage
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:id="@+id/cover_user_photo"
                android:layout_centerInParent="true"
                android:elevation="30dp" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:background="#ff00a0e9">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Zeashon"
                android:id="@+id/textView21"
                android:textSize="20sp"
                android:gravity="top|center_horizontal"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:text="收藏的地点"
                android:id="@+id/button6"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/selector05"
                android:gravity="left|center_vertical"
                android:paddingLeft="65dp"
                android:layout_marginRight="5dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView"
                android:layout_alignBottom="@+id/button6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/iconfont_shoucang"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:elevation="10dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:id="@+id/textView20"
                android:layout_below="@+id/button6"
                android:layout_alignLeft="@+id/button6"
                android:layout_alignStart="@+id/button6"
                android:layout_alignRight="@+id/button6"
                android:layout_alignEnd="@+id/button6"
                android:layout_alignBottom="@+id/button6"
                android:background="@android:color/black"
                android:layout_marginTop="5dp"
                android:elevation="30dp" />

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>