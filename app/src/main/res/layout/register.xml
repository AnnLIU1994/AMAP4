<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f5f5f0"
    android:layout_height="match_parent"
    android:id="@+id/login"
    style="@android:style/Animation">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/makeRoad_header"
        android:layout_gravity="top"
        android:background="#ff00a0e9" />

    <Button
        android:id="@+id/makeRoad_GoBack"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/iconfont_zuojiantou" />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="欢迎注册"
    android:id="@+id/textView2"
    android:layout_alignBottom="@+id/makeRoad_header"
    android:layout_centerHorizontal="true"
    android:layout_alignParentTop="true"
    android:textColor="@android:color/white"
    android:textAlignment="center"
    android:gravity="center_vertical"
    android:textSize="21sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/makeRoad_header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_centerInParent="true"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_weight="0.8"
            android:layout_marginBottom="20dp">
            <com.example.amap.util.CircularImage
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:id="@+id/circle"
                android:layout_centerInParent="true"
                android:layout_gravity="bottom|center_horizontal"
                />
            <com.example.amap.util.CircularImage
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:id="@+id/cover_user_photo"
                android:layout_centerInParent="true"
                android:layout_gravity="bottom|center_horizontal"/>
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/l1">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/nickImg"
                android:background="@drawable/iconfont_gerenzhongxin"
                android:layout_gravity="left|bottom"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="25dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/newNickName"
                android:layout_weight="0.70"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="5dp"
                android:autoText="false"
                android:hint="昵称"
                android:background="@color/transparency"/>

        </LinearLayout>
        <View
            android:id="@+id/spit_view2"
            android:layout_width="290dp"
            android:layout_height="0.6dp"
            android:layout_below="@+id/l1"
            android:background="#d3e3e3"
            android:layout_marginLeft="60dp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/l2">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/loginTelImg"
            android:background="@drawable/iconfonttel"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="5dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginName"
            android:layout_weight="0.70"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:autoText="false"
            android:hint="手机号码"
            android:background="@color/transparency"/>

    </LinearLayout>
        <View
            android:id="@+id/spit_view3"
            android:layout_width="290dp"
            android:layout_height="0.6dp"
            android:layout_below="@+id/l2"
            android:background="#d3e3e3"
            android:layout_marginLeft="60dp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/l3">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/lockImg01"
                android:background="@drawable/iconfontlock"
                android:layout_gravity="left|bottom"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/loginPass01"
                android:layout_weight="0.70"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="5dp"
                android:hint="6-10位的密码"
                android:layout_gravity="bottom"
                android:background="@color/transparency"/>

        </LinearLayout>
        <View
            android:id="@+id/spit_view1"
            android:layout_width="290dp"
            android:layout_height="0.6dp"
            android:layout_below="@+id/l3"
            android:background="#d3e3e3"
            android:layout_marginLeft="60dp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/lockImg02"
                android:background="@drawable/iconfontlock"
                android:layout_gravity="left|bottom"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/loginPass02"
                android:layout_weight="0.70"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="5dp"
                android:hint="再次输入密码"
                android:layout_gravity="bottom"
                android:background="@color/transparency"/>

        </LinearLayout>

        <Button
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:text="完成注册"
            android:id="@+id/registerBtn"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/selector09"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </LinearLayout>
</RelativeLayout>